{
    "error_handler":{
        "desc":"默认的常见错误错误处理入口，在几乎所有任务节点的 interrupt 默认存在。注意，所有任务节点名字里带“error”的（无论大小写） interrupt 都会被置空，防止 interrupt 的无限递归。",
        "next":[
            "error_server_error_retry",
            "error_server_is_under_sceduled_maintenance",
            "error_cannot_operate_the_game",
            "error_download_data",
            "error_new_download_added"
        ]
    },  
    "error_weekly_record_has_been_reset":{
        "recognition":"template_match",
        "action":"report_error",
        "params":{
            "template":"weekly_record_has_been_reset",
            "error_msg":"每周的奖励已重置，请自行处理未完成镜牢后重启 | Weekly mirror has been reset, check and restart later plz"
        }
    },
    "error_server_is_under_sceduled_maintenance":{
        "recognition":"template_match",
        "action":"report_error",
        "params":{
            "template":"server_is_under_sceduled_maintenance",
            "error_msg":"服务器正在做日常维护，请稍后重启 | Server is under sceduled maintenance, restart later plz"
        }
    },
    "error_cannot_operate_the_game":{
        "recognition":"template_match",
        "action":"error_cannot_operate_the_game",
        "params":{
            "template":"cannot_operate_the_game",
            "error_msg":"无法操作，将稍后重启 |  Can not operate the game, lalc will restart it later."
        }
    },
    "error_download_data":{
        "desc":"应对下载数据的弹窗",
        "recognition":"template_match",
        "action":"error_download_data_confirm",
        "params":{
            "template":"download_data",
            "post_delay":3
        },
        "next":[
            "error_wait_downloading"
        ]
    },
    "error_download_data_confirm":{
        "action":"click",
        "params":{
            "target":[750, 450]
        }
    },
    "error_wait_downloading":{
        "recognition":"template_match",
        "action":"wait_disappear",
        "params":{
            "template":"download_data",
            "post_delay":3
        }
    },
    "error_server_error_retry":{
        "desc":"应对服务错误的弹窗",
        "recognition":"template_match",
        "params":{
            "template":"server_error_occurred_try_again"
        },
        "next":[
            "error_server_error_retry_confirm"
        ]
    },
    "error_server_error_retry_confirm":{
        "desc":"应对服务错误的弹窗",
        "recognition":"template_match",
        "action":"click",
        "params":{
            "pre_delay":7,
            "template":"popup_try"
        },
        "next":[
            "wait_connecting_disappear"
        ]
    },
    "error_new_download_added":{
        "desc":"应对新加下载的弹窗",
        "recognition":"template_match",
        "params":{
            "template":"new_download_added"
        },
        "next":[
            "error_new_download_added_confirm"
        ]
    },
    "error_new_download_added_confirm":{
        "desc":"应对新加下载的弹窗",
        "recognition":"template_match",
        "action":"click",
        "params":{
            "template":"notifs_popup_confirm"
        },
        "next":[
            "wait_connecting_disappear"
        ]
    }
}